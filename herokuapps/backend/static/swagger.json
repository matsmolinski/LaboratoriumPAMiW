{
  "openapi": "3.0.0",
  "info": {
    "description": "Mateusz Smoli≈Ñski",
    "version": "1.0.0",
    "title": "Backend swagger",
    "contact": {
      "email": "01131251@pw.edu.pl"
    }
  },
  "servers": [
    {
      "url": "/"
    }
  ],
  "tags": [
    {
      "name": "Authorization",
      "description": "User authorization with backend"
    },
    {
      "name": "Registration",
      "description": "Adding user to provisional database"
    },
    {
      "name": "Library",
      "description": "Adding and getting pdf files"
    }
  ],
  "paths": {
    "/database": {
      "post": {
        "tags": [
          "Registration"
        ],
        "summary": "Adds user to database",
        "requestBody": {
          "description": "Checked user data",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/newuser"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User successfully added"
          },
          "201": {
            "description": "Login already in use"
          },
          "400": {
            "description": "Failed to read request"
          }
        }
      }
    },
    "/login": {
      "post": {
        "tags": [
          "Authorization"
        ],
        "summary": "Tries to log in user",
        "requestBody": {
          "description": "Checked user data",
          "required": true,
          "content": {
            "json": {
              "schema": {
                "$ref": "#/components/schemas/user"
              }
            }
          }
        },
        "responses": {
          "200": {
            "schema": {
              "$ref": "#/components/schemas/cookies"
            }
          },
          "210": {
            "description": "User unrecognized"
          },
          "211": {
            "description": "Password is invalid"
          },
          "400": {
            "description": "Failed to read request"
          }
        }
      }
    },
    "/logout": {
      "post": {
        "tags": [
          "Authorization"
        ],
        "summary": "Tries to log out user",
        "requestBody": {
          "description": "Id of the session",
          "required": true,
          "content": {
            "json": {
              "schema": {
                "$ref": "#/components/schemas/sessionid"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "User logged out"
          },
          "400": {
            "description": "Failed to read request"
          }
        }
      }
    },
    "/check": {
      "post": {
        "tags": [
          "Authorization"
        ],
        "summary": "Checks if user has valid session ID",
        "requestBody": {
          "description": "Id of the session",
          "required": true,
          "content": {
            "json": {
              "schema": {
                "$ref": "#/components/schemas/sessionid"
              }
            }   
          }       
        },
        "responses": {
          "200": {
            "description": "Everything fine"
          },
          "201": {
            "description": "Authorization failed"
          },
          "400": {
            "description": "Failed to read request"
          }
        }
      }
    },
    "/pdfs": {
      "post": {
        "tags": [
          "Library"
        ],
        "summary": "Adds position to database",
        "requestBody": {
          "description": "Pdf file",
          "required": true,
          "content": {
            "file": {
              "schema": {
                "file": {
                  "type": "file",
                  "properties": {
                      "type":"file"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "forces refresh on the site"
          },
          "400": {
            "description": "Failed to read request"
          }
        }
      }
    },
    "/pdfs/<string:name>": {
      "get": {
        "tags": [
          "Library"
        ],
        "summary": "Tries to get file from db",
        "responses": {
          "200": {
            "description": "Filename if not found",
            "file": {
              "description": "Pdf file"
            }
          }
        }
      }
    },
    "/pdfs/list": {
      "get": {
        "tags": [
          "Library"
        ],
        "summary": "Returns list of pfds' names",
        "responses": {
          "200": {
          }
        }
      }
    }
  },
    "components": {
      "schemas": {
        "newuser": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "format": "string"
            },
            "email": {
              "type": "string",
              "format": "string"
            },
            "password": {
              "type": "string",
              "format": "string"
            }
          }
        },
        "user": {
          "type": "object",
          "properties": {
            "name": {
              "type": "string",
              "format": "string"
            },
            "password": {
              "type": "string",
              "format": "string"
            }
          }
        },
        "cookies": {
          "type": "object",
          "properties": {
            "sessionid": {
              "type": "string",
              "format": "string"
            },
            "jwt": {
              "type": "string",
              "format": "string"
            }
          }
        },
        "sessionid": {
          "type": "object",
          "properties": {
            "sessionid": {
              "type": "string",
              "format": "string"
            }
          }
        },
        "filename": {
          "type": "string",
          "properties": {
            "filename": {
              "type": "string"
            }
          }
        }
      }
    }
}